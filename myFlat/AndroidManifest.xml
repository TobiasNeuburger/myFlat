<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myflat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.myflat.Login"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.myflat.Register"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.Dashboard"
            android:label="@string/title_activity_dashboard" >
        </activity>
        <activity
            android:name="com.example.myflat.Detail"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="com.example.myflat.ShowZaehler"
            android:label="@string/title_activity_show_zaehler" >
        </activity>
        <activity
            android:name="com.example.myflat.ShowZaeherWater"
            android:label="@string/title_activity_show_zaeher_water" >
        </activity>
        <activity
            android:name="com.example.myflat.ShowZaehlerWater"
            android:label="@string/title_activity_show_zaehler_water" >
        </activity>
        <activity
            android:name="com.example.myflat.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
    </application>

</manifest>