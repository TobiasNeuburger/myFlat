<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myflat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.myflat.Start"
            android:label="@string/title_activity_start"
            android:configChanges="orientation"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.myflat.Login"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.Register"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.Dashboard"
            android:label="@string/title_activity_dashboard"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.DetailWater"
            android:label="@string/title_activity_detail_water"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.ShowZaeherWater"
            android:label="@string/title_activity_show_zaehler_water"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.ShowZaehlerWater"
            android:label="@string/title_activity_show_zaehler_water"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.ShowZaehlerElectro"
            android:label="@string/title_activity_show_zaehler_electro"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.DetailElectro"
            android:label="@string/title_activity_detail_electro"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.DetailGas"
            android:label="@string/title_activity_detail_gas"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.ShowZaehlerGas"
            android:label="@string/title_activity_show_zaehler_gas"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.myflat.Settings"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>